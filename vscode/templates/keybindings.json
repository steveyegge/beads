[
  {
    "// BEADS SESSION SHORTCUTS": "",
    "// NOTE: Bootup/landing keybindings removed (bd-5g4d)": "",
    "// Claude Code CLI startup hooks auto-fire, making manual keybindings redundant": "",
    "// Git hooks (pre-commit, pre-push) provide the real enforcement value": ""
  },
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "bd ready --json\n"
    },
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "bd sync && git status\n"
    },
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+d",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "bd doctor\n"
    },
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+q",
    "command": "workbench.action.tasks.runTask",
    "args": "Health: Quality Gates (All)",
    "when": "!terminalFocus"
  }
]
